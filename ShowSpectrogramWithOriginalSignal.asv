function [] = ShowSpectrogramWithOriginalSignal(signalSpectrum, signalFormants t, Fs)
figure();
subplot(2,1,1)
showSpectrogram(signalSpectrum', Fs);
title('spectrum');
xlabel('time [s]');
ylabel('Frequenzy [Hz]');
set(gca,'YTick',0:1000:20000);
grid on;
subplot(2,1,2)
plot(t, signalSpectrum);
title('original signal')
xlabel('time [s]');
ylabel('Amplitude');
end

